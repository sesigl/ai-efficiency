{
  "name": "supermarket-bounded-contexts",
  "version": "1.0.0",
  "description": "Supermarket system demonstrating bounded contexts for AI and human cognitive boundaries",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "dep-check": "depcruise src --config .dependency-cruiser.cjs",
    "validate": "npm run dep-check && npm run build && npm run test"
  },
  "keywords": [
    "ddd",
    "bounded-contexts",
    "clean-architecture",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "fastify": "^4.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "dependency-cruiser": "^16.0.0",
    "eslint": "^8.54.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
